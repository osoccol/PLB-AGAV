{
  "name": "monorepo-demo",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "prefix": "app",
  "sourceRoot": "apps/monorepo-demo/src",
  "tags": [],
  "i18n": {
    "sourceLocale": "fr-FR",
    "locales": {
      "en-GB" : {
        "translation": "apps/monorepo-demo/src/locale/messages.en.xlf",
        "baseHref": "en-GB/"
      },
      "es-ES" : {
        "translation": "apps/monorepo-demo/src/locale/messages.es.xlf",
        "baseHref": "es-ES/"
      }
    }
  },
  "targets": {
    "build": {
      "executor": "@angular-devkit/build-angular:application",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/apps/monorepo-demo",
        "localize": [
          "en-GB"
        ],
        "index": "apps/monorepo-demo/src/index.html",
        "browser": "apps/monorepo-demo/src/main.ts",
        "polyfills": ["zone.js"],
        "tsConfig": "apps/monorepo-demo/tsconfig.app.json",
        "assets": [
          {
            "glob": "**/*",
            "input": "apps/monorepo-demo/public"
          }
        ],
        "styles": ["apps/monorepo-demo/src/styles.css"],
        "scripts": [
          "node_modules/@angular/localize/init/index.d.ts"
        ]
      },
      "configurations": {
        "production": {
          "budgets": [
            {
              "type": "initial",
              "maximumWarning": "500kb",
              "maximumError": "1mb"
            },
            {
              "type": "anyComponentStyle",
              "maximumWarning": "4kb",
              "maximumError": "8kb"
            }
          ],
          "outputHashing": "all"
        },
        "development": {
          "optimization": false,
          "extractLicenses": false,
          "sourceMap": true
        }
      },
      "defaultConfiguration": "production"
    },
    "serve": {
      "executor": "@angular-devkit/build-angular:dev-server",
      "configurations": {
        "production": {
          "buildTarget": "monorepo-demo:build:production"
        },
        "development": {
          "buildTarget": "monorepo-demo:build:development"
        }
      },
      "defaultConfiguration": "development"
    },
    "extract-i18n": {
      "executor": "@angular-devkit/build-angular:extract-i18n",
      "options": {
        "buildTarget": "monorepo-demo:build"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/monorepo-demo/jest.config.ts"
      }
    },
    "serve-static": {
      "executor": "@nx/web:file-server",
      "options": {
        "buildTarget": "monorepo-demo:build",
        "port": 4200,
        "staticFilePath": "dist/apps/monorepo-demo/browser",
        "spa": true
      }
    }
  }
}
